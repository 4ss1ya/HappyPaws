<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- EditText для ввода болезни -->
    <EditText
        android:id="@+id/editTextDisease"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_disease"
        android:inputType="text" />

    <!-- EditText для ввода даты -->
    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_date"
        android:inputType="date" />

    <!-- EditText для ввода рецепта -->
    <EditText
        android:id="@+id/editTextRecipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_recipe"
        android:inputType="text" />

    <!-- EditText для ввода вакцины -->
    <EditText
        android:id="@+id/editTextVaccine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_vaccine"
        android:inputType="text" />

    <!-- Кнопка для добавления записи -->
    <Button
        android:id="@+id/buttonAddNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_note" />

    <!-- TableLayout для отображения записей -->
    <TableLayout
        android:id="@+id/tableMedicalNotes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:stretchColumns="1"
        android:paddingTop="16dp">

        <TableRow>
            <!-- Заголовки для каждого столбца -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/disease"
                android:padding="8dp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/date"
                android:padding="8dp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/recipe"
                android:padding="8dp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/vaccine"
                android:padding="8dp" />
        </TableRow>

        <!-- Динамически добавляемые строки таблицы будут вставляться сюда -->

    </TableLayout>

</LinearLayout>
